<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试登录"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试订购"
        app:layout_constraintTop_toBottomOf="@id/btn_login" />

    <Button
        android:id="@+id/btn_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试鉴权"
        app:layout_constraintTop_toBottomOf="@id/btn_order" />

    <Button
        android:id="@+id/btn_clear_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清除登录信息"
        app:layout_constraintTop_toBottomOf="@id/btn_auth" />

    <Button
        android:id="@+id/btn__clear_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清除订购信息"
        app:layout_constraintTop_toBottomOf="@id/btn_clear_login" />

    <Button
        android:id="@+id/btn__clear_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清除token信息"
        app:layout_constraintTop_toBottomOf="@id/btn__clear_order" />
</LinearLayout>